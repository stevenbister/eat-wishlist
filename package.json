{
	"name": "eats-wishlist",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler pages dev",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test": "pnpm test:unit -- --run && pnpm test:e2e",
		"test:e2e": "playwright test",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply eats-wishlist-dev --local && drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed:local": "curl http://localhost:5173/api/seed",
		"deploy:db": "d1 migrations apply eats-wishlist-prod --remote",
		"deploy:pages": "pnpm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.5.24",
		"@cloudflare/workers-types": "^4.20241022.0",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^4.7.4",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.0",
		"@types/node": "^22.8.7",
		"better-sqlite3": "^11.5.0",
		"drizzle-kit": "^0.22.0",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"stylelint": "^16.10.0",
		"stylelint-config-idiomatic-order": "^10.0.0",
		"stylelint-config-standard-scss": "^13.1.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.12.2",
		"vite": "^5.0.3",
		"vitest": "^2.0.5",
		"wrangler": "^3.84.1"
	},
	"dependencies": {
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"bcrypt-edge": "^0.1.0",
		"drizzle-orm": "^0.33.0"
	}
}
